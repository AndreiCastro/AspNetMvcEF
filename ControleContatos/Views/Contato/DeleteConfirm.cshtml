@model ContatoModel

@{
    ViewData["Title"] = "Excluir Contato";
}
<div class="text-center">
    <h3 class="display-4">Deseja realmente excluir o contato: <b>@Model.Nome</b> ?</h3>
</div>

<form class="row g-3">
    <a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Delete">Confirmar</a>
    <a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>